%html(data-app-version="#{MANIFEST["version"]}")
  %head
    %meta(charset="utf-8")
    %meta(name="referrer" content="never")
    %meta(http-equiv="X-Frame-Options" content="SAMEORIGIN")
    %title
    %link(rel="stylesheet" href="/write/write.css?v=#{MANIFEST["version"]}")
    %script(src="/lib/jquery/jquery.min.js?v=#{MANIFEST["version"]}")
    %script(src="/app.js?v=#{MANIFEST["version"]}")
    %script(src="/app_core.js?v=#{MANIFEST["version"]}")
    //%script(src="module.js?v=#{MANIFEST["version"]}")
    %script(src="/write/write.js?v=#{MANIFEST["version"]}")
  %body.view_write
    %form
      %header
        %h1
        %select#aa_selectbox(tabindex="5")
        %button.preview_button(tabindex="1") AA表示確認
      %div
        %input(type="submit" value="書き込む" tabindex="5")
        %label
          名前:
          %input.name(size="19" tabindex="2")
        %label
          E-mail:
          %input.mail(size="19" tabindex="3")
      %textarea.message(wrap="off" tabindex="4" autofocus required)
      .notice
    .iframe_container
      .hide_iframe
